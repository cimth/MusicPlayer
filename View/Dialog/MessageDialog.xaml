<Window x:Class="View.Dialog.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converter="clr-namespace:View.Converter"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" d:DesignHeight="120" d:DesignWidth="300"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <!-- Grid layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Error message -->
        <Label Grid.Row="0" Padding="5"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Content="{Binding DialogMessage, FallbackValue=Dialog Message}" />
        
        <!-- Buttons -->
        <UniformGrid Grid.Row="1">
            <Button Content="{DynamicResource Str_Ok}" IsDefault="True" Margin="0,10,5,0"
                    MaxWidth="150"
                    Click="OK_OnClick" />
        </UniformGrid>
    </Grid>
</Window>
